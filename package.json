{
  "name": "@brewen-dev/style",
  "description": "Style for brewen-dev projects",
  "version": "1.0.5",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brewen-dev/style.git"
  },
  "scripts": {
    "setup": "bun install && bunx husky install",
    "release": "bunx standard-version",
    "publish": "npm publish",
    "commit": "cz",
    "build": ". ./scripts/build.sh",
    "lint": "bunx stylelint 'src/**/*.scss'",
    "commitlint": "bunx commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "sass": "~1.69.5",
    "standard-version": "^9.5.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
